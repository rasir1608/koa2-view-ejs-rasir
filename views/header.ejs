<header class="pub-header">
  <nav>
    <a href="/">首页</a>
  </nav>
  <div class="user-action">
    <% if(userName){ %>
      <a href="/"><%= userName %></a>
      <% } else { %>
      <a href="/user/login">登录</a>
    <% } %>
    <a href="/user/logout">登出</a>
    <a href="/user/register">注册帐号</a>
  </div>
</header>
<script>
  var index = <%= ['todolist'].indexOf(router) %>;
  var $navAs = $('.pub-header nav a');
  if(index !== -1) $($navAs[index]).addClass('is-active').siblings().removeClass('is-active');
</script>
<style>
  .pub-header{
    height: 60px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background: #324157;
    padding: 0 20px;
    color: #fff;
  }
  .pub-header .user-action{
    flex: 1;
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }
  .pub-header a{
    padding: 5px 20px;
  }
  .pub-header nav a.is-active{
    color: #20a0ff;
  }
  .pub-header nav a:hover{
    color: #20a0ff;
  }
</style>